                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 4: Page Buttons -->
                    <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center">
                        <Button x:Name="clubPreviousPageButton" Content="Previous" Click="PreviousClubPageButton_Click" Width="100" Height="30" Margin="10"/>
                        <Button x:Name="clubNextPageButton" Content="Next" Click="NextClubPageButton_Click" Width="100" Height="30" Margin="10"/>
                    </StackPanel>

                </Grid>
            </TabItem>
        </TabControl>

        <!-- Input Token Expander -->
        <Expander Header="Input Token" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="933,14,0,0">
            <Button x:Name="openDialogButton" Content="Racenet Refresh Token" Click="OpenDialogButton_Click" Width="200" Height="45"/>
        </Expander>
    </Grid>
