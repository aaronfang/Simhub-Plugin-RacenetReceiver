<Window x:Class="Aaron.PluginRacenetReceiver.TokenInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Token" Height="255" Width="394">
    <StackPanel>
        <TextBlock Text="Please input your token:" Margin="10" FontSize="14" Foreground="#FFECECEC"/>
        <TextBox x:Name="inputTokenTextBox" Margin="10" Height="120"/>
        <Button Content="OK" Click="okButton_Click" Width="50" Height="30" HorizontalAlignment="Right" Margin="10"/>
    </StackPanel>
</Window>